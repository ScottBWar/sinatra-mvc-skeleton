<link rel="stylesheet" href="/css/deckgrid.css">
<div class="darksection">

</div>
<%if params[:round_over]%>
  <h4 style="color:#c0392b;text-align:center;margin-top:20px">Your round is OVER</h4>
<%end%>
<div class="intro-div">
<div class="flash-div">



<div class="animated bounceIn" id="this">
<a class="flash2" href="">CHOOSE A DECK</a>
</div>




</div>


</div>



<% all_decks.each do |deck| %>
<div class="slider">
<div class="animated slideInRight">
<a class= "deckname" href="/card/<%=deck.card_ids.sample%>?current_deck_id=<%=deck.id%>">
  <div class="square">
    <div class="content">
        <div class="table">
            <div class="table-cell">
                <ul><%= deck.name %></ul>
            </div>
        </div>
    </div>
  </div>
</a>
  </div>
 </div>


<%end%>
