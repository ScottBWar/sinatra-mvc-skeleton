<div class="answer_form">
<h3>What's your answer?</h3>
<form action='/card/<%=flash_card.id%>?current_deck_id=<%=flash_card.deck_id%>' id="give_answer" method='POST'>
  <input type='hidden' name='card_id' value='<%=flash_card.id%>'>
  <input type='text' name='answer' placeholder='answer here'>
  <input class='button' type='submit'>
</form>
</div>



<script language="JavaScript">

$(document).ready(function() {
  $("#toggler").hide();
    $("#give_answer").submit(function(e) {
        $("#toggler").show();
        set.Timeout(continueExectution, 600);
        $("#toggler").hide();
    });
});

</script>




